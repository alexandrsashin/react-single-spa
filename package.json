{
  "name": "@react-single-spa/root-config",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "vite --mode development",
    "dev:all": "concurrently --names \"auth,root\" \"yarn --cwd packages/auth start\" \"yarn start\"",
    "dev": "vite --mode development",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "build": "tsc && vite build --mode production"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@vitejs/plugin-legacy": "^7.2.1",
    "concurrently": "^7.6.0",
    "cross-env": "^10.0.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "ts-config-single-spa": "^3.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "single-spa": "^6.0.3",
    "single-spa-layout": "^3.0.0"
  },
  "types": "dist/react-single-spa-root-config.d.ts"
}

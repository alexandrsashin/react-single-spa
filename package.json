{
  "name": "react-single-spa",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "description": "Local development helper for this single-spa root-config + microfrontends monorepo.",
  "scripts": {
    "build": "yarn generate-importmap && yarn workspaces foreach --all run build",
    "build:production": "yarn generate-importmap && yarn workspaces foreach --all run build:nocheck",
    "dev": "yarn workspaces foreach --all --parallel run dev",
    "generate-importmap": "node scripts/generate-importmap.js",
    "start:production": "yarn generate-importmap && yarn workspace root-config preview",
    "lint": "eslint . --config configs/eslint.config.ts",
    "lint:fix": "eslint . --config configs/eslint.config.ts --fix",
    "format": "prettier --write --config configs/.prettierrc .",
    "format:check": "prettier --check --config configs/.prettierrc .",
    "knip": "knip --config configs/knip.config.ts",
    "knip:fix": "knip --fix --config configs/knip.config.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexandrsashin/react-single-spa.git"
  },
  "keywords": [],
  "author": "Alexandr Sashin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexandrsashin/react-single-spa/issues"
  },
  "homepage": "https://github.com/alexandrsashin/react-single-spa#readme",
  "packageManager": "yarn@4.10.3",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.2.0",
    "knip": "^5.71.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "vite-plugin-externalize-dependencies": "^1.0.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}
